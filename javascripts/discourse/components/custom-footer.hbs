{{#if @showFooter}}
  <div class="wrap">
    <div class="flexbox">
      <div class="first-box">
        <div class="heading">
          {{this.mainHeading}}
        </div>
        <div class="blurb">
          {{this.blurb}}
        </div>
        <div align="center">
          <form action="https://www.paypal.com/donate" method="post" target="_top">
          <input type="hidden" name="hosted_button_id" value="J95MCLZMU9T9A" />
          <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" title="PayPal - The safer, easier way to pay online!" alt="Donate with PayPal button" />
          <img alt="" border="0" src="https://www.paypal.com/en_US/i/scr/pixel.gif" width="1" height="1" />
          </form>
        </div>
      </div>
      
      <div class="second-box">
        <PluginOutlet @name="easy-footer-second-box">
          <div class="links">
            {{#each (theme-setting "sections") as |section|}}
              <div
                class="list"
                data-easyfooter-section={{dasherize section.text}}
              >
                <span title={{section.title}}>
                  {{section.text}}
                </span>

                <ul>
                  {{#each section.links as |link|}}
                    <li
                      class="footer-section-link-wrapper"
                      data-easyfooter-link={{dasherize link.text}}
                    >
                      <a
                        class="footer-section-link"
                        title={{link.title}}
                        href={{link.url}}
                        target={{link.target}}
                        referrerpolicy={{link.referrer_policy}}
                      >
                        {{link.text}}
                      </a>
                    </li>
                  {{/each}}
                </ul>
              </div>
            {{/each}}
          </div>
        </PluginOutlet>
      </div>

      <div class="third-box">
        <div class="footer-links">
          {{#each (theme-setting "small_links") as |link|}}
            <a
              class="small-link"
              data-easyfooter-small-link={{dasherize link.text}}
              target={{link.target}}
              href={{link.url}}
            >
              {{link.text}}
            </a>
          {{/each}}
        </div>
        <div class="social">
          <a class="small-link" href="//lotuselan.net/terms-and-conditions#copy">&copy; Copyright 1999-2025</a>
        </div>
      </div>
    </div>
  </div>
{{/if}}